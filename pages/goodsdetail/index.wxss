/* pages/goodsdetail/index.wxss */

swiper {
  height: 720rpx;
  width: 100vw;
}

swiper image {
  height: 100%;
}

.goods_detail {
  padding: 0 20px;
  box-sizing: border-box;
}

.goods_detail .price {
  color: red;
  font-size: 20px;
  line-height: 40px;
}

.goods_des {
  display: flex;
  justify-content: space-between;
  align-items: center
}

.goods_dex_detail {
  width: 509rpx;
}

.goods_des .collect {
  font-size: 12px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-left: 40rpx;
  border-left: 1px solid #eee;
  color: #666;
}

.goods_dex_detail {
  font-size: 14px;
  -webkit-line-clamp: 2; /*控制显示的行数*/
  display: -webkit-box; /*必要属性*/
  -webkit-box-orient: vertical; /*控制其中内容的排列方式*/
  overflow: hidden;
   height: 100rpx;
}
.expressage{
  color: #666;
  font-size: 10px;
}
.expressage text:nth-of-type(1){
  margin-right: 20px;
  margin-top: 20px;
}
/* 底部按钮 */
.view_bottom{
  position: fixed;
  display: flex;
  height: 100rpx;
  bottom: 0;
  align-items: center;
  width: 100vw;
}
.small_btn{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-around;
  font-size: 8px;
  color: #333;
  width: 20%;
}
.big_btn{
  width: 30%;
  color: white;
  background: orange;
  height: 100%;
  text-align: center;
  line-height: 100rpx;
  font-size: 12px;
}
.big_btn:nth-of-type(4){
  font-size: 12px;
  background: red;
}



