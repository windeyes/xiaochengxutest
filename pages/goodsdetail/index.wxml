    </view>
  </view>
  <!-- 底部信息 -->
  <view class="view_bottom">
    <view class="small_btn">
      <view class="iconfont icon-icon3"></view>
      <view>联系客服</view>
    </view>
    <view class="small_btn">
      <view class="iconfont icon-icon3"></view>
      <view>购物车</view>
    </view>
    <view class="big_btn">
      <view>加入购物车</view>
    </view>
    <view  class="big_btn">
      <view>立即购买</view>
    </view>
  </view>



</view>