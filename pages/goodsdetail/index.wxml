<view class="container">
  <!-- 轮播图 -->
  <swiper>
    <swiper-item>
      <image mode="aspectFill" src="https://ss3.bdstatic.com/70cFv8Sh_Q1YnxGkpoWK1HF6hhy/it/u=4054658919,2603023798&fm=26&gp=0.jpg"></image>
    </swiper-item>
    <swiper-item>
      <image src="https://ss3.bdstatic.com/70cFv8Sh_Q1YnxGkpoWK1HF6hhy/it/u=4054658919,2603023798&fm=26&gp=0.jpg"></image>
    </swiper-item>
  </swiper>
  <!-- 详情信息 -->
  <view class="goods_detail">
    <view class="price">￥279</view>
    <view class="goods_des">
      <view class="goods_dex_detail">
